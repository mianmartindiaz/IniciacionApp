<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto_lavera.Pagina.Registro"  BackgroundColor="#15261C">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logodv.jpg"/>
            <Label Text="Nombre" FontSize="Large" HorizontalOptions="Center" TextColor="#C1DF4A" Margin="0,20,0,20"/>
            <Entry x:Name="User" BackgroundColor="#8F9999"  TextColor="#15261C" HorizontalOptions="Center" FontSize="Medium" WidthRequest="200" HeightRequest="40"  />
            <Label Text="Password" FontSize="Large" HorizontalOptions="Center" TextColor="#C1DF4A" Margin="0,20,0,20" HeightRequest="40"/>
            <Entry  x:Name="Pass" IsPassword="True" TextColor="#15261C" BackgroundColor="#8F9999" HorizontalOptions="Center" FontSize="Medium" WidthRequest="200" Opacity="20"/>
            <Button Clicked="Button_Clicked" Text="ENTRAR" FontSize="Large" TextColor="#15261C" BackgroundColor="#C1DF4A"  WidthRequest="300" HorizontalOptions="Center" Margin="0,30,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>