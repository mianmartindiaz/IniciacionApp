<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto_lavera.Tabbed.MiCuenta" Title="Cuenta" BackgroundColor="#15261C">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Label x:Name="nombre"  TextColor="#C1DF4A" FontSize="Medium"  HorizontalOptions="CenterAndExpand" Margin="0,10,0,0"/>
            <Grid ColumnSpacing="20" Margin="20,30,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Image x:Name="deseos" Source="deseos" Grid.Row="0" Grid.Column="0" />
                <Image x:Name="planning" Source="planning" Grid.Row="0" Grid.Column="1" />
            </Grid>
            <Button x:Name="BtnRegistro" Clicked="BtnRegistro_Clicked" Text="LOGIN" FontSize="Large" TextColor="#15261C" BackgroundColor="#8EAC18"  WidthRequest="300" VerticalOptions="End" HorizontalOptions="Center" Margin="0,30,0,0" IsVisible="False"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>